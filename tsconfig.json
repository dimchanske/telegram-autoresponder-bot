{
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2015",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
  },
  "ts-node": {
    "esm": true
  },
  "files": [
    "app/index.ts",
  ],
  "lib": [
    "es2019",
    "dom"
  ],
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "watchOptions": {
    "excludeDirectories": ["**/node_modules"],
  }
}
